<div class="container" id="product-section">
  <div class="row">
   <div class="col-md-6">
     <%=image_tag("default_user.png", size: 350)%>
   </div>
   <div class="col-md-6">
     <div class="col-md-12">
       <h1><%= @project.title %></h1>
       <span class="label label-primary">Category:<%= @project.category.name %> </span>
      <p class="description">
      Pleged a goal of <%= number_to_currency(@project.goal) %>
      </p>
      <div class="progress">
  <div class="progress-bar progress-bar-striped" role="successbar"
  aria-valuenow="<%= @project.funding_received %>" aria-valuemin="0" aria-valuemax="100" style="width:<%= @project.funding_received %>%">
    <%= @project.funding_received %>%
  </div>
</div>
    <p>Project created on: <%= @project.created_at.to_date.strftime("%B %d, %Y") %> </p>
    <p>Backers: 0</p>
    <p>Days to go: 0</p>
    </div>
    <% if current_user.nil? %>
      <%= button_to "Back project!", guest_login_path, class: "btn btn-primary btn-block", method: :get %>
    <% else %>
      <%= button_to "Back project!", projects_new_pledge_path(@project.slug), class: "btn btn-primary btn-block", method: :get %>
    </div>
    <% end %>
    </div>
  </div>
  <!-- Nav tabs -->
  <div class="col-lg-12 center">
      <div>

          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active">
                  <a href="#description" aria-controls="description" role="tab" data-toggle="tab">
                      <span class="span-tabs">Description</span>
                  </a>
              </li>
              <li role="presentation">
                  <a href="#comments" aria-controls="comments" role="tab" data-toggle="tab">
                      <span class="span-tabs">Comments</span>
                  </a>
              </li>
              <li role="presentation">
                  <a href="#backers" aria-controls="backers" role="tab" data-toggle="tab">
                      <span class="span-tabs">Backers</span>
                  </a>
              </li>
              <li role="presentation">
                  <a href="#other_projects" aria-controls="other_projects" role="tab" data-toggle="tab">
                      <span class="span-tabs">Other Projects</span>
                  </a>
              </li>
          </ul>

          <!-- Tab panes -->
          <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="description">
                <%= @project.description %>
              </div>

              <div role="tabpanel" class="tab-pane" id="comments">
                <% if @project.backers.include?(current_user) %>
                <%= button_to "Post Your Comment", "#" %>
                <% else %>
                <%= "Only backers of #{@project.title} can post comments." %>
                <% end %>
              </div>

              <div role="tabpanel" class="tab-pane" id="backers">
                All users who have backed the project.
              </div>

              <div role="tabpanel" class="tab-pane" id="other_projects">
                All info about projects.
              </div>
          </div>
      </div>
  </div>


</div>

<%= link_to "Edit Your Project", edit_project_path(@project.title.parameterize), method: :get %>
